fun Main(args: string[*]): i32 {
    printf("Hello, World!\n".data);
    assert(true, "This is a test");

    for (i := 0; i < args.length; i += 1) {
        print(args[i]);
    }

    if (args.length > 1 && args[1] == "test") {
        print("First argument is 'test'");
    } else {
        assert(false, "First argument is not 'test'");
    }

    return 0;
}
